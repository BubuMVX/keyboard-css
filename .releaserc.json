{
  "branches": [
    { "name": "main" },
    { "name": "development", "channel": "development", "prerelease": "beta" }
  ],
  "preset": "angular",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "dist/**/*.*",
          "docs",
          "package.json",
          "npm-shrinkwrap.json"
        ],
        "message": "chore(release): ${nextRelease.version} ${new Date().toLocaleString('en-IN', { timeZone: 'IST' })} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
